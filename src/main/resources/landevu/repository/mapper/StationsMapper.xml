<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="landevu.repository.mapper.StationsMapper">

    <select id="findById" resultType="landevu.repository.dao.StationDao">
        select * from stations where station_id = #{stationId}
    </select>

    <select id="findByTrainLineId" resultType="landevu.repository.dao.StationDao">
        select * from stations where train_line_id = #{trainLineId}
    </select>

    <select id="findByAreaId" resultType="landevu.repository.dao.StationDao">
        select * from stations where area_id = #{areaId}
    </select>

    <select id="searchByName" resultType="landevu.repository.dao.StationDao">
        select * from stations where station_name like concat('%', #{stationName}, '%')
    </select>
</mapper>
